<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:color="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/title_font"
            android:text="@string/forgotpass_scr_forgot_password"
            android:textColor="@color/primary_blue1"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/text_font"
            android:text="@string/forgotpass_scr_enter_explain_email1"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/Edit_UserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="50dp"
            android:hint="Email"
            android:fontFamily="@font/text_font"
            android:background="@drawable/edittext_round"
            tools:ignore="HardcodedText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/text_font"
            android:text="@string/forgotpass_scr_enter_explain_email2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/Btn_Forgotpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_round"
            android:elevation="8dp"
            android:fontFamily="@font/title_font"
            android:padding="9dp"
            android:text="@string/forgotpass_scr_confirm"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/text_font"
            android:text="@string/email_scr_havenotreceived"/>

        <TextView
            android:id="@+id/ForgotPw_ResendEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/boldtext_font"
            android:text="@string/email_scr_resend"
            android:textColor="@color/black"/>

</LinearLayout>