<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:color="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/title_font"
                android:text="@string/mypage_scr_mypage"
                android:textColor="@color/primary_blue1"
                android:textSize="35sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/myimage"
            android:layout_marginTop="30dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/userphoto3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/myusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypage_scr_my_username"
                android:textColor="@color/black"
                android:fontFamily="@font/boldtext_font" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/myusername_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="@string/mypage_scr_name"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/myemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypage_scr_my_email"
                android:textColor="@color/black"
                android:fontFamily="@font/boldtext_font" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/myemail_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="@string/mypage_scr_email"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/mypassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/boldtext_font"
                android:text="@string/mypage_scr_my_password"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/mypassword_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="44dp"
                android:text="@string/mypage_scr_reset"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/editu_scr_edit_delete"
            android:textColor="@color/red"
            android:fontFamily="@font/boldtext_font" />
    </LinearLayout>

