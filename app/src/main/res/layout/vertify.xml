<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:color="@color/white">

    <ImageView
        android:id="@+id/shieldlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/iconbackground"
        android:padding="17dp"
        app:srcCompat="@drawable/shieldlock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/title_font"
        android:text="@string/vertifydoorlock_scr_vertify"
        android:textColor="@color/primary_blue1"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/text_font"
        android:text="@string/vertifydoorlock_scr_explain_vertification_"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp" >

        <EditText
            android:id="@+id/Edit_Vertify1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/edittext_round"
            android:fontFamily="@font/title_font"
            android:padding="15dp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpeakableTextPresentCheck"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/Edit_Vertify2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edittext_round"
            android:fontFamily="@font/title_font"
            android:padding="15dp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpeakableTextPresentCheck"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/Edit_Vertify3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edittext_round"
            android:fontFamily="@font/title_font"
            android:padding="15dp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpeakableTextPresentCheck"
            android:inputType="textMultiLine"/>

        <EditText
            android:id="@+id/Edit_Vertify4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edittext_round"
            android:fontFamily="@font/title_font"
            android:padding="15dp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpeakableTextPresentCheck"
            android:inputType="textMultiLine" />

    </LinearLayout>

    <Button
        android:id="@+id/Btn_Vertify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_round"
        android:elevation="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/title_font"
        android:padding="9dp"
        android:text="@string/vertifydoorlock_scr_confirm"
        android:textColor="@color/white"
        android:textSize="17sp" />
</LinearLayout>